<script type="text/javascript">

 function addfish(){
   var fishName = document.getElementById("fishName").value;
   var wght = document.getElementById("wght").value;
   var picture = document.getElementById("picture").value;

   if(fishName == ""){
     document.getElementById("NameError").innerHTML = "Please Enter a valid Name";
   }

   if(wght == ""){
     document.getElementById("wghtError").innerHTML = "Please Enter a valid weight";
   }

   if(picture == ""){
     document.getElementById("pictureError").innerHTML = "Please Enter a valid weight";
   }
}
</script>

<script type="text/javascript" >
jQuery(document).ready(function($) {
  $("#add-fish-btn").click(function(e) {
    e.preventDefault();
    var fishName = $("#fishName").val();
    var wght = $("#wght").val();
    var picture = $("#picture").val();
    var dataString = 'fishName='+ fishName + '&wght=' + wght + '&picture=' + picture;

    if(fishName=='' || wght=='' || picture==''){
      $('.success').fadeOut(200).hide();
      $('.error').fadeOut(200).show();
    }
    else{
      $.ajax({
        type: "POST",
        url: "/addfish",
        data: dataString,
        success: function(){
          $('.success').fadeIn(200).show();
          $('.error').fadeOut(200).hide();
        }
      });
    }
    return false;
  });
});
</script>
